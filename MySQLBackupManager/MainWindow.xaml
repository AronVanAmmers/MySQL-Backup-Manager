<mui:ModernWindow x:Name="BackupManagerMainWindow" x:Class="MySQLBackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="MBM" IsTitleVisible="True" Icon="Resources/Icons/MySQLBackupManager-System-Tray-Icon.ico" WindowStartupLocation="CenterScreen" ContentSource="/Pages/DatabasesPage.xaml">
    
    <!-- Menu with application links -->
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="MySQL Backup Manager">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Databases" Source="/Pages/DatabasesPage.xaml" />
                <mui:Link DisplayName="About" />
                <mui:Link DisplayName="Help" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="settings" GroupName="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Application" Source="/Pages/Settings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/Settings.xaml" />
    </mui:ModernWindow.TitleLinks>
    
</mui:ModernWindow>
