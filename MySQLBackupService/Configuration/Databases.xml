<?xml version="1.0" encoding="utf-8" ?>
<Databases>
  <!--
  The following is Database Skeleton. You can copy and paste to add more databases which needs backups
  First 4 is ordinary database credentials to access the database. The BackupSettings is setting the StartTime, 
  which decides when to start the backup event of this particular database.
  
  <Database>
    <Host>localhost</Host>
    <User>Username</User>
    <Password>Password</Password>
    <DatabaseName>MyDatabase</DatabaseName>
    
    <BackupSettings>
      <StartTime>04:00</StartTime>
    </BackupSettings>
  </Database>
  -->
  <Database>
    <Host>localhost</Host>
    <User>root</User>
    <Password>admin</Password>
    <DatabaseName>movstreamdb</DatabaseName>

    <BackupSettings>
      <StartTime>04:00</StartTime>
    </BackupSettings>
  </Database>
</Databases>